<Window x:Class="superAwesomeAmazingTourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:superAwesomeAmazingTourPlanner"
        xmlns:ViewModels="clr-namespace:ViewModels;assembly=ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <ViewModels:MainWindowViewModel></ViewModels:MainWindowViewModel>
    </Window.DataContext>

    <!--/*<Window.Resources>
        <ViewModels:MainWindowViewModel x:Key="MainViewModel"/>
    </Window.Resources> */-->
    
    <StackPanel>
        <Button Content="dummy button"></Button>
        <Button Content="reverse name" Command="{Binding ShowCommand, Mode=TwoWay}"></Button>
        <TextBox Text="{Binding Name, Mode=TwoWay}"></TextBox>
        <TextBlock Text="{Binding Name, Mode=TwoWay}"></TextBlock>
    </StackPanel>
</Window>
